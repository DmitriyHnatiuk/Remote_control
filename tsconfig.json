{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "target": "es5",
    "module": "ES6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "rootDir": "./",
    "outDir": "./",
    "forceConsistentCasingInFileNames": true,

    "sourceMap": true
  },
  "include": ["src/**/*", "./"],
  "exclude": ["node_modules", "*/**/*.js"],
  "ts-node": {
    "esm": true
  }
}
